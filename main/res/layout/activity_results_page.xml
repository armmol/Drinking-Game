<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:foreground="#009CD53F"
    tools:context=".Main2Activity">


    <TextView
        android:id="@+id/Player2"
        android:layout_width="351dp"
        android:layout_height="36dp"
        android:layout_below="@+id/Player1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Player1"
        android:layout_width="351dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="194dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:text="Results"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="RANK || NAME || DRUNK%"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/history"
        android:layout_width="162dp"
        android:layout_height="75dp"
        android:layout_below="@+id/addtohistory"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:text="View History" />

    <Button
        android:id="@+id/addtohistory"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Player2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="237dp"
        android:layout_marginRight="237dp"
        android:text="Add to History" />

    <EditText
        android:id="@+id/ID_Text"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_below="@+id/history"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:ems="10"
        android:hint="Enter ID to be deleted"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/delete"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_toStartOf="@+id/ID_Text"
        android:layout_toLeftOf="@+id/ID_Text"
        android:text="Delete" />

</RelativeLayout>
